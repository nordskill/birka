{
    "name": "website",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "concurrently -k \"nodemon ./bin/www\" \"npm run watch\"",
        "watch": "webpack --watch --config webpack.config.js --mode development --profile",
        "prod": "cross-env NODE_ENV=production node ./bin/www",
        "build": "webpack --config webpack.config.js --mode production && npm run scalepage",
        "scalepage": "node scripts/scalepage ./public/birka/css/style.min.css 19.2",
        "demo-content": "node ./scripts/demo-content.js",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
    },
    "dependencies": {
        "ajaxforms": "^1.1.1",
        "bootstrap": "^5.3.3",
        "chart.js": "^4.4.1",
        "connect-mongo": "^5.1.0",
        "cookie-parser": "~1.4.4",
        "cross-env": "^7.0.3",
        "csv-parse": "^5.5.6",
        "debug": "~2.6.9",
        "ejs": "^3.1.9",
        "express": "^5.0.1",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.17.3",
        "http-errors": "~1.6.3",
        "mongoose": "^8.0.0",
        "morgan": "~1.9.1",
        "multer": "^1.4.5-lts.1",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "sharp": "^0.32.6",
        "stripe": "^16.12.0"
    },
    "devDependencies": {
        "browser-sync-webpack-plugin": "^2.3.0",
        "concurrently": "^8.2.1",
        "css-loader": "^6.9.0",
        "eslint": "^8.50.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "mini-css-extract-plugin": "^2.7.7",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.3",
        "sass": "^1.69.7",
        "sass-loader": "^16.0.2",
        "style-loader": "^3.3.4",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.88.2",
        "webpack-bundle-analyzer": "^4.10.1",
        "webpack-cli": "^5.1.4"
    }
}
