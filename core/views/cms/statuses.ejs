<%- include('partials/header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%- include('partials/breadcrumbs') %>
            <%- include('partials/title') %>
                <div class="pb-4">
                    <div class="d-flex align-items-center pb-3">
                        <button class="btn btn-primary me-2">Create New</button>
                        <button class="btn btn-danger">Delete <span>2</span> Selected</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped  align-middle table-hover table_edit">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <input class="form-check-input" type="checkbox" value="" aria-label="...">
                                    </th>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Slug</th>
                                    <th scope="col">Notifications</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% statuses.forEach(function(status){ %>
                                    <tr>
                                        <td><input class="form-check-input" type="checkbox" value="" aria-label="...">
                                        </td>
                                        <td><strong>
                                                <%=status.sorting_order%>
                                            </strong></td>
                                        <td>
                                            <a href="<%=active%>/<%=status._id%>">
                                                <%=status.name%>
                                            </a>
                                        </td>
                                        <td>
                                            <%=status.slug%>
                                        </td>
                                        <td>--0--</td>
                                        <td>
                                            <button class="btn btn-link btn-sm">
                                                <svg class="icon">
                                                    <use xlink:href="#pencil"></use>
                                                </svg>
                                            </button>
                                            <button class="btn btn-link btn-sm">
                                                <svg class="icon">
                                                    <use xlink:href="#trash"></use>
                                                </svg>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- content -->
                </div>
                <pre><code>
                    <%= JSON.stringify(statuses, null, 2) %>
                </code></pre>
    </main>
    <%- include('../partials/svg-sprite') %>
        <%- include('partials/footer') %>