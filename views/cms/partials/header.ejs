<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>

    <% if (env === 'production') { %>
        <link rel="preload" href="/cms-assets/css/cms_style.min.css" as="style">
        <link href="/cms-assets/css/cms_style.min.css" rel="stylesheet">
    <% } else { %>
        <script src="/dev/cms_style.js"></script>
    <% } %>

    <%- SS.custom_html %>
    
    <meta name="template" content="<%= template_name %>">
    <meta name="csrf" content="<%= locals?.csrf_token %>">
</head>

<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/"><%= SS.name %></a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <div class="navbar-nav flex-row">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="/cms/customers/<%= auth_user?._id %>"><%= auth_user?.account_details?.username %></a>
            </div>
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="/cms/logout">Sign out</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <%- include('navigation') %>
                </div>
            </nav>