<%- include('partials/header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%- include('partials/breadcrumbs') %>
            <%- include('partials/title') %>
            <div>
                <div class="m-0 pb-4">
                    <div class="d-flex justify-content-between bg-light p-3 rounded-top">
                        <div class="col-auto d-flex">
                            <form action="" id="sendFiles">
                                <label for="file_input" class="btn btn-primary me-2">Upload</label>
                                <input type="file" name="" class="d-none" id="file_input" accept="image/*, video/*" multiple>
                            </form>
                            <button class="btn btn-danger me-2 delete-btn">Delete 0 selected files</button>
                            <button class="btn btn-secondary deselect-btn">Deselect</button>
                        </div>
                        <div class="col-auto">
                            <form class="d-flex ms-auto" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                              </form>
                        </div>
                    </div>
                    <div class="d-flex align-items-center bg-secondary-subtle p-3 rounded-bottom">
                        <button class="btn btn-light me-2">All <span class="text-black-50 all_files_amount"><%- imagesAmount + videosAmount -%></span></button>
                        <button class="btn btn-light me-2">Images <span class="text-black-50 images_amount"><%- imagesAmount -%></span></button>
                        <button class="btn btn-light me-2">Videos <span class="text-black-50 videos_amount"><%- videosAmount -%></span></button>
                    </div>
                </div>
                <div class="pb-4">
                    <div class="files">
                        <% files.forEach(function(file){ %>
                            <%- file %>
                        <% }); %>
                    </div>
                </div>
            </div>
            <nav aria-label="Page navigation" class="pt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled previous-page">
                        <a class="page-link" href="#">Previous</a>
                    </li>

                    <% for(let i = 1; i <= pageAmount; i++){ %>
                        <li class="page-item"><a class="page-link" href="#" data-page-num="<%- i-1 -%>"><%- i -%></a></li>
                    <% }; %>

                    <li class="page-item next-page">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
    </main>
    <%- include('partials/footer') %>