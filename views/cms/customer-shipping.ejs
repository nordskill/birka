<%- include('partials/header') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%- include('partials/breadcrumbs') %>
            <%- include('partials/title') %>
                <div class="pb-4">
                    <form action="#" class="needs-validation" novalidate>

                        <div class="row">
                            <div class="col-12 col-lg-4">
                                <div class="mb-3">
                                    <label for="f1" class="form-label">Full Name:</label>
                                    <input type="text" class="form-control" id="f1"
                                        value="<%=shipping_details.full_name%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Full Name.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="c1" class="form-label">Company Name:</label>
                                    <input type="text" class="form-control" id="c1" required
                                        value="<%=shipping_details.company_name%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Company Name.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="cc1" class="form-label">Country:</label>
                                    <input type="text" class="form-control" id="cc1" required
                                        value="<%=shipping_details.country.name%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Country.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="s1" class="form-label">Sreet Address:</label>
                                    <input type="text" class="form-control" id="s1" required
                                        value="<%=shipping_details.street_address_1%>">
                                    <input type="text" class="form-control mt-1" id="s2" required
                                        value="<%=shipping_details.street_address_2%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Sreet Address.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="ps1" class="form-label">Postal Code:</label>
                                    <input type="text" class="form-control" id="ps1" required
                                        value="<%=shipping_details.zip_code%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Postal Code.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="ct1" class="form-label">City:</label>
                                    <input type="text" class="form-control" id="ct1" required
                                        value="<%=shipping_details.city%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid City.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="r1" class="form-label">Region/State:</label>
                                    <input type="text" class="form-control" id="r1" required
                                        value="<%=shipping_details.region%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid Region/State.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="mb-3">
                                    <label for="e1" class="form-label">E-mail:</label>
                                    <input type="email" class="form-control" id="e1" required
                                        value="<%=shipping_details.email%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid E-mail.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="e11" class="form-label">Phone:</label>
                                    <input type="text" class="form-control" id="e11" required
                                        value="<%=shipping_details.phone%>">
                                    <div class="invalid-feedback">
                                        Please provide a valid E-mail.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-lg-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="default"
                                        <%=shipping_details.default===true ? 'checked' : '' %>>
                                    <label class="form-check-label user-select-none" for="default">
                                        Use as default shipping address
                                    </label>
                                    <!-- <div class="invalid-feedback">
                                        You must agree before submitting.
                                    </div> -->
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    <button class="btn btn-primary btn-sm" type="submit">Update Address</button>
                                    <button class="btn btn-danger btn-sm">Delete Address</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <pre><code>
                    <%= JSON.stringify(shipping_details, null, 2) %>
                </code></pre>
    </main>
    <%- include('partials/footer') %>