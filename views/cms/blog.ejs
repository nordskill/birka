<%- include('partials/header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%- include('partials/breadcrumbs') %>
            <%- include('partials/title') %>
                <div>
                    <div class="card bg-light">
                        <div class="card-body d-flex flex-wrap justify-content-between">
                            <div class="col-auto">
                                <button class="btn btn-primary me-2">Create New</button>
                                <button class="btn btn-danger">Delete <span>2</span> Selected</button>
                            </div>
                            <div class="col-auto">
                                <form action="#" class="needs-validation" novalidate="">
                                    <div class="row align-content-center gx-2">
                                        <div class="col-auto position-relative">
                                            <label for="s_1" class="visually-hidden">Search</label>
                                            <input type="text" class="form-control" id="s_1"
                                                aria-describedby="validationServer03Feedback" required=""
                                                placeholder="Search...">
                                            <div class="invalid-tooltip">
                                                Please provide a valid Search.
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-outline-success" type="submit">Search</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive mt-4">
                        <table class="table table-striped  align-middle table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <input class="form-check-input" type="checkbox" value="" aria-label="...">
                                    </th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Tags</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% blogs.forEach(function(post){ %>
                                    <tr>
                                        <td><input class="form-check-input" type="checkbox" value="" aria-label="...">
                                        </td>
                                        <td>
                                            <a href="<%=active + '/' +post._id%>">
                                                <%=post.title%>
                                            </a>
                                        </td>
                                        <td>
                                            <%=formatDate(post.createdAt,'dd mon yyyy')%>
                                        </td>
                                        <td>
                                            <a href="<%=post.author._id%>">
                                                <%=post.author.account_details.username%>
                                            </a>
                                        </td>
                                        <td>
                                            <%- post.tags.map(function(tag){ return `<a
                                                href="${tag._id}">${tag.name}</a>`}).join(', '); %>
                                        </td>
                                        <% }); %>
                                    </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="pt-1">
                        <button class="btn btn-danger">Delete Selected</button>
                    </div>
                    <nav aria-label="Page navigation" class="pt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>

                </div>
                <pre><code>
                    <%= JSON.stringify(blogs, null, 2) %>
                </code></pre>
    </main>
    <%- include('partials/footer') %>