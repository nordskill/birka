<%- include('partials/header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%- include('partials/breadcrumbs') %>
            <%- include('partials/title') %>
                <div class="pb-4">
                    <div class="d-flex align-items-center pb-3">
                        <button class="btn btn-primary me-2">Create New</button>
                        <button class="btn btn-danger">Delete <span>2</span> Selected</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped  align-middle table-hover table_edit">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <input class="form-check-input" type="checkbox" value="" aria-label="...">
                                    </th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Users</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% notifications.forEach(notification => { %>
                                    <tr>
                                        <td><input class="form-check-input" type="checkbox" aria-label="select row"></td>
                                        <td><a href="/cms/notifications/<%= notification._id %>"><%= notification.name %></a></td>
                                        <td><%= notification.email_template.file_name %></td>
                                        <td><%- notification.notify_users.map(user => `<a href="/cms/customers/${user._id}">${user.account_details.username}</a>`).join(', ') %></td>
                                        <td>
                                            <button class="btn btn-link btn-sm">
                                                <svg class="icon">
                                                    <use xlink:href="#pencil"></use>
                                                </svg>
                                            </button>
                                            <button class="btn btn-link btn-sm">
                                                <svg class="icon">
                                                    <use xlink:href="#trash"></use>
                                                </svg>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                                <tr class="table-active">
                                    <td>
                                        <input class="form-check-input" type="checkbox" value="" aria-label="..."
                                            checked="">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-control-sm" placeholder="Tag Name">
                                    </td>
                                    <td><input type="text" class="form-control form-control-sm" placeholder="tag-name">
                                    </td>
                                    <td><input type="text" class="form-control form-control-sm" placeholder="tag-name">
                                    </td>
                                    <td>
                                        <button class="btn btn-link btn-sm">
                                            <svg class="icon">
                                                <use xlink:href="#cancel"></use>
                                            </svg>
                                        </button>
                                        <button class="btn btn-link btn-sm">
                                            <svg class="icon">
                                                <use xlink:href="#pencil"></use>
                                            </svg>
                                        </button>
                                        <button class="btn btn-link btn-sm">
                                            <svg class="icon">
                                                <use xlink:href="#trash"></use>
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <code>
                    <pre>
                        <%= JSON.stringify(notifications, null, 2) %>
                    </pre>
                </code>
    </main>
    <%- include('../partials/svg-sprite') %>
        <%- include('partials/footer') %>