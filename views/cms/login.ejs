<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>

    <% if (env === 'production') { %>
        <link rel="preload" href="/css/cms/cms_style.min.css" as="style">
        <link href="/css/cms/cms_style.min.css" rel="stylesheet">
    <% } else { %>
        <script src="/dev/cms_style.js"></script>
    <% } %>

    <%- SS.custom_html %>
    
    <meta name="template" content="<%= template_name %>">
    <meta name="csrf" content="<%= locals.csrf_token || '' %>">
</head>

<body class="login d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
        <form name="login">
            <img class="mb-4" src="/files/56/default_avatar.png" alt="" width="57" height="57">
            <h1 class="h4 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="username or email" name="username">
                <label for="floatingInput">username or e-mail</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="password" name="password">
                <label for="floatingPassword">password</label>
            </div>

            <!-- hidden field -->
            <input type="hidden" name="csrf_token" value="<%= locals.csrf_token || '' %>">

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="remember">
                <label class="form-check-label" for="flexCheckDefault">Remember me</label>
            </div>
            <div class="alert alert-danger" hidden></div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        </form>
    </main>

    <% if (env === 'production') { %>
        <script src="/js/cms_main.min.js"></script>
    <% } else { %>
        <script type="module" src="/dev/cms_main.js"></script>
    <% } %>

</body>

</html>