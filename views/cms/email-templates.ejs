<%- include('partials/header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <%- include('partials/breadcrumbs') %>
    <%- include('partials/title') %>
        <div class="pb-4">
            <div class="d-flex align-items-center pb-3">
                <button class="btn btn-primary me-2">Create New</button>
                <button class="btn btn-danger">Delete <span>2</span> Selected</button>
            </div>
            <div class="table-responsive mt-4">
                <table class="table table-striped  align-middle table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                <input class="form-check-input" type="checkbox" value="" aria-label="...">
                            </th>
                            <th scope="col">Name</th>
                            <th scope="col">Note</th>
                            <th scope="col">Data Created</th>
                            <th scope="col">Template</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const template of templates) { %>
                            <tr>
                                <td><input class="form-check-input" type="checkbox" aria-label="select"></td>
                                <td><a href="/cms/email-templates/<%= template._id %>"><%= template.name %></a></td>
                                <td><%= template.note %></td>
                                <td><%= formatDate(template.createdAt, 'dd mon yyyy') %></td>
                                <td><%= template.file_name %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="pt-1">
                <button class="btn btn-danger">Delete Selected</button>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>